// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

//previewFeatures = ["referentialIntegrity"] = 다른 객체에 연결될 때 그 객체가 존재하길 바란다는 설정
datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id              Int      @id @default(autoincrement())
  user_id         String   @unique
  password        String
  phone           Int?     @unique
  name            String
  email           String?  @unique
  address         String?
  detailedAddress String?
  termsOfUse      Boolean
  privacy         Boolean
  marketing       Boolean
  userLevel       Int   @default(1)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  products        Product[]
}


model Product {
  id              Int @id @default(autoincrement())
  name            String
  price           Float
  deliveryCharge  Float //배송비
  popularity      Boolean //인기여부
  recommendation  Boolean //추천여부
  description     String @db.MediumText //상품설명
  user            User  @relation(fields:[userId], references: [id], onDelete: Cascade)
  userId          Int
  image           String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}